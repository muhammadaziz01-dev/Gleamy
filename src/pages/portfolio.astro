---
import MainLayout from "../layout/main-layout.astro"
import PortfolioImg1 from "../assets/images/img1.png";
import PortfolioImg2 from "../assets/images/img2.png";
import PortfolioImg3 from "../assets/images/img3.png";

---



<MainLayout title="Portfolio page" id="portfolio">
    <div class=" relative top-[100px] mb-[150px] ">
        
        <h2 class="text-white text-[40px] pt-[22px] pl-[22px] ">SERVICES</h2>
        <h1 class="logo-text absolute top-[-100px]">p</h1>
        <div class="flex justify-between pl-[310px] pt-[90px] relative gap-6 ">
            
            <div class="w-[300px]">
                <img src={PortfolioImg1.src} alt="portfolio">
                <h3 class="text-white mt-[40px] mb-[10px] text-[24px] text-center">Gleamy portfolio</h3>
                <p class="text-[#D0D0D0] text-center relative">UI/UX <span class="inline-block w-[5px] h-[5px] rounded-[50%] bg-[#FF7E21] absolute top-[10px] left-[120px] "></span></p>
            </div>
            <div class="w-[300px]">
                <img src={PortfolioImg2.src} alt="portfolio">
                <h3 class="text-white mt-[40px] mb-[10px] text-[24px] text-center">Gleamy portfolio</h3>
                <p class="text-[#D0D0D0] text-center relative">UI/UX <span class="inline-block w-[5px] h-[5px] rounded-[50%] bg-[#FF7E21] absolute top-[10px] left-[120px] "></span></p>
            </div>
            <div class="w-[300px] pt-[70px]">
                <img src={PortfolioImg3.src} alt="portfolio">
                <h3 class="text-white mt-[40px] mb-[10px] text-[24px] text-center">Gleamy portfolio</h3>
                <p class="text-[#D0D0D0] text-center relative">UI/UX <span class="inline-block w-[5px] h-[5px] rounded-[50%] bg-[#FF7E21] absolute top-[10px] left-[120px] "></span></p>
            </div>
        </div>
        <h1 class="logo-text2 absolute left-[-150px] bottom-[-300px] z- 0">the cre8tive</h1>
    </div>
</MainLayout>

<style lang="scss">
    .logo-text{
      -webkit-text-stroke-width: 1;
      -webkit-text-stroke: 3px rgba(54, 54, 54, 1);
      font-family: Poppins;
      font-size: 454px;
      font-style: normal;
      font-weight: 400;
      line-height: 170%; /* 771.8px */
      text-transform: lowercase;
    }

    .logo-text2{
        -webkit-text-stroke-width: 1;
-webkit-text-stroke: 2px rgba(77, 77, 77, 0.50);
font-family: Poppins;
font-size: 180px;
font-style: normal;
font-weight: 700;
line-height: 175%; /* 315px */
letter-spacing: 3.6px;
text-transform: uppercase;
    }
  </style>